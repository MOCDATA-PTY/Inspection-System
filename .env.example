# Django Configuration
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-with-django-get_random_secret_key
ALLOWED_HOSTS=127.0.0.1,localhost,your-domain.com

# Database Configuration - PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=inspection_system
DB_USER=your-db-username
DB_PASSWORD=your-db-password
DB_HOST=your-db-host
DB_PORT=5432

# Database Configuration - SQL Server
SQL_SERVER_ENGINE=mssql
SQL_SERVER_NAME=AFS
SQL_SERVER_USER=your-sql-username
SQL_SERVER_PASSWORD=your-sql-password
SQL_SERVER_HOST=your-sql-host
SQL_SERVER_PORT=1053

# OneDrive Configuration
ONEDRIVE_CLIENT_ID=your-onedrive-client-id
ONEDRIVE_CLIENT_SECRET=your-onedrive-client-secret
ONEDRIVE_REDIRECT_URI=http://your-domain.com/onedrive/callback

# Microsoft Graph API Configuration
GRAPH_CLIENT_ID=your-graph-client-id
GRAPH_CLIENT_SECRET=your-graph-client-secret
GRAPH_TENANT_ID=your-tenant-id

# Security Settings
SESSION_COOKIE_SECURE=False  # Set to True when using HTTPS
CSRF_COOKIE_SECURE=False     # Set to True when using HTTPS
CSRF_COOKIE_HTTPONLY=True

# HTTPS/SSL Settings (for production)
SECURE_SSL_REDIRECT=False         # Set to True to force HTTPS
USE_X_FORWARDED_PROTO=False       # Set to True if behind a proxy
SECURE_HSTS_SECONDS=0             # Set to 31536000 (1 year) for production HTTPS
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/1
